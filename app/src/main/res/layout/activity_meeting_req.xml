<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_meeting_req"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hbsha.sprom.MeetingReq">

    <TextView
        android:text="Meeting Request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="10dp"
        android:id="@+id/TXTMEETINGREQ" />

    <TextView
        android:text="Project Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TXTMEETINGREQ"
        android:layout_marginTop="51dp"
        android:id="@+id/textView3" />

    <TextView
        android:text="Venue : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/EDTMEETDES"
        android:layout_marginTop="15dp"
        android:id="@+id/textView6"
        android:layout_alignEnd="@+id/EDTMEETDESC"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Time and Date : "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView6"
        android:layout_marginTop="15dp"
        android:id="@+id/textView7"
        android:layout_alignEnd="@+id/EDTMEETDESC"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/EDTPROJNAME"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/EDTVENUE"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/EDTMEETDES" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/EDTMEETDES"
        android:layout_alignBottom="@+id/EDTMEETDESC"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/EDTTIME"
        android:layout_below="@+id/EDTVENUE"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/EDTTMNAME"
        android:layout_below="@+id/EDTPROJNAME"
        android:layout_alignParentEnd="true" />



    <TextView
        android:text="Meeting Description :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/EDTMEETDESC"
        android:layout_below="@+id/EDTTMNAME"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Team Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TXTVEWTASKNAME"
        android:layout_alignBaseline="@+id/EDTTMNAME"
        android:layout_alignBottom="@+id/EDTTMNAME"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:text="SUBMIT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="38dp"
        android:id="@+id/BTNSUBMIT"
        android:onClick="onClickSubmit"
        android:background="@drawable/button_shape"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
