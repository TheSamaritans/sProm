<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_and_modify_task"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hbsha.sprom.ViewAndModifyTask">

    <TextView
        android:text="Task Details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:id="@+id/TXTVEWUPDATETASK" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/TXTVEWUPDATETASK"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="16dp"
        android:id="@+id/updatetxtproname"
        android:layout_toEndOf="@+id/TXTVEWUPDATETASK" />

    <TextView
        android:text="Project Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TXTVEWUPDATETASK"
        android:layout_marginTop="27dp"
        android:id="@+id/updcreateproname"
        android:layout_alignParentStart="true" />



    <TextView
        android:text="Task Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updcreateproname"
        android:layout_marginTop="30dp"
        android:id="@+id/TXTVEWUPDTASKNAME"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/updatetxtproname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:ems="10"
        android:layout_below="@+id/updcreateproname"
        android:layout_marginTop="15dp"
        android:id="@+id/updatetxtteammem"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/TXTVEWUPDTASKNAME"
        android:editable="false" />

    <TextView
        android:text="Task Description :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updatetxtteammem"
        android:layout_marginTop="19dp"
        android:id="@+id/TXTVIEWUPDTSKDESCRIPTION"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/updatetxtteammem"
        android:layout_alignParentEnd="true"
        android:id="@+id/updatetxttskname"
        android:layout_toEndOf="@+id/TXTVIEWUPDTSKDESCRIPTION"
        android:layout_alignStart="@+id/updatetxtteammem" />

    <TextView
        android:text="Task Weightage :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/updatetxttskname"
        android:layout_marginTop="15dp"
        android:id="@+id/textView9"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/updatetxttskname"
        android:layout_toEndOf="@+id/textView9"
        android:id="@+id/updatetxtdesc"
        android:layout_alignStart="@+id/updatetxttskname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/updatetxtduedate"
        android:layout_below="@+id/updatetxtdesc"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/TXTVEWUPDTXTSTATUS"
        android:layout_alignStart="@+id/updatetxtdesc" />


    <TextView
        android:text="Task Status :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TXTVEWUPDTXTSTATUS"
        android:layout_alignBottom="@+id/updatetxtduedate"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Sprint ID :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TXTVEWMODIFYSCRSPRINTID"
        android:layout_below="@+id/TXTVEWUPDTXTSTATUS"
        android:layout_marginTop="20dp"/>

    <TextView
        android:text="Emp Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/empname_text"
        android:layout_below="@+id/TXTVEWMODIFYSCRSPRINTID"
        android:layout_marginTop="20dp"/>


    <!--  <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/empNameEdit"
        android:layout_below="@+id/EDTTEXTMODIFYSCRSPRINTID"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/TXTVEWUPDTXTSTATUS" />-->

