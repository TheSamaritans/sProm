        android:text="Emp Name:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Empname"
        android:layout_alignBottom="@+id/TXTVEWMODIFYSCRSPRINTID"
        android:layout_alignEnd="@+id/TXTVIEWUPDTSKDESCRIPTION"
        android:layout_alignParentStart="true" />-->


    <Button
        android:text="REMOVE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/updateprobutton"
        android:layout_toEndOf="@+id/updateprobutton"
        android:layout_marginStart="23dp"
        android:id="@+id/updateproremobutton"
        android:layout_alignBottom="@+id/updateprobutton"
        android:onClick="onClickRemove" />

    <Button
        android:text="UPDATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/updateprobutton"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/TXTVIEWUPDTSKDESCRIPTION"
        android:onClick="onClickUpdate" />

    <Button
        android:text="ASSIGN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BTNASSIGN"
        android:onClick="onClickAssign"
        android:layout_alignBaseline="@+id/updateproremobutton"
        android:layout_alignBottom="@+id/updateproremobutton"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/empname_spinner"
        android:layout_toEndOf="@+id/updateproremobutton"
        android:layout_alignTop="@+id/empname_text"
        android:layout_alignStart="@+id/sprintId_spinner" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sprintId_spinner"
        android:layout_alignStart="@+id/updatetxtduedate"
        android:layout_below="@+id/updatetxtduedate"
        android:layout_above="@+id/empname_spinner" />

