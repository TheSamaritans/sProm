<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hbsha.sprom.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DONE"
        android:id="@+id/BTNDONE"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:minWidth="300dp"
        android:layout_alignBaseline="@+id/TXTVEWPROJNAME"
        android:layout_alignBottom="@+id/TXTVEWPROJNAME"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/TXTVEWPROJNAME"
        android:layout_alignStart="@+id/editText22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Project Name:"
        android:id="@+id/TXTVEWPROJNAME"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText22" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="30dp"
        android:id="@+id/textView"
        android:text="Create Team"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Emp Name:"
        android:id="@+id/TXTVEWEMPNAME"
        android:layout_alignBaseline="@+id/editText27"
        android:layout_alignBottom="@+id/editText27"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Emp Role:"
        android:id="@+id/TXTVEWEMPROLE"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/editText28"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/editText28" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText28"
        android:layout_alignBaseline="@+id/TXTVEWEMPID"
        android:layout_alignBottom="@+id/TXTVEWEMPID"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/TXTVEWEMPID" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Emp Id"
        android:id="@+id/TXTVEWEMPID"
        android:layout_below="@+id/editText27"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:layout_toStartOf="@+id/editText27" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText29"
        android:layout_alignBaseline="@+id/TXTVEWEMPROLE"
        android:layout_alignBottom="@+id/TXTVEWEMPROLE"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/TXTVEWEMPROLE" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText27"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/TXTVEWEMPNAME" />

    <Button
        android:text="ADD"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/BTNDONE"
        android:layout_marginStart="13dp"
        android:id="@+id/BTNADD" />

</RelativeLayout>

